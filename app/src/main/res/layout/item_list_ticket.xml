<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <TextView
            android:id="@+id/itemLT_namaBis"
            android:text="Nama Bis"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:id="@+id/itemLT_fasilitasBis"
            android:text="Fasilitas Bis"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemLT_namaBis"
            app:layout_constraintStart_toStartOf="@id/itemLT_namaBis"
            />

        <TextView
            android:id="@+id/itemLT_jlmWaktuBis"
            android:text="00 hrs"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            android:textColor="@color/ungu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemLT_fasilitasBis"
            app:layout_constraintStart_toStartOf="@id/itemLT_fasilitasBis"
            />

        <TextView
            android:id="@+id/itemLT_waktuBerangkatBis"
            android:text="00.00 PM"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemLT_jlmWaktuBis"
            app:layout_constraintStart_toStartOf="@id/itemLT_jlmWaktuBis"
            />

        <TextView
            android:id="@+id/batas1"
            android:text=" ---- "
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemLT_jlmWaktuBis"
            app:layout_constraintStart_toEndOf="@id/itemLT_waktuBerangkatBis"
            />

        <TextView
            android:id="@+id/itemLT_waktuSampaiBis"
            android:text="00.00 AM"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/itemLT_jlmWaktuBis"
            app:layout_constraintStart_toEndOf="@id/batas1"
            />

        <TextView
            android:id="@+id/itemLT_hargaBis"
            android:text="RP. 000K"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginEnd="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/itemLT_waktuBerangkatBis"
            />

        <ImageView
            android:id="@+id/itemLT_img1Bis"
            android:src="@drawable/armchair"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/itemLT_hargaBis"
            app:layout_constraintBottom_toTopOf="@id/itemLT_jlmWaktuBis"
            />

        <ImageView
            android:src="@drawable/single_bed"
            android:layout_marginStart="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/itemLT_img1Bis"
            app:layout_constraintBottom_toTopOf="@id/itemLT_jlmWaktuBis"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>