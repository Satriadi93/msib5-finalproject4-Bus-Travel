<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WelcomeActivity">

    <ImageView
        android:id="@+id/welcomeImg"
        android:src="@drawable/login_img"
        android:layout_marginTop="50dp"
        android:layout_width="241dp"
        android:layout_height="280dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/welcomeText1"
        android:text="Welcome!"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeImg"
        />

    <TextView
        android:id="@+id/welcomeText2"
        android:text="@string/welcomeText2"
        android:textSize="12sp"
        android:textAlignment="center"
        android:layout_marginTop="15dp"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText1"
        />
    
    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcomeBtnLogin"
        android:text="Login"
        android:layout_marginTop="35dp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/warnaBtn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText2"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/welcomeBtnRegister"
        android:text="Register"
        android:layout_marginTop="15dp"
        app:cornerRadius="8dp"
        android:backgroundTint="@color/warnaBtn"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/welcomeBtnLogin"
        />

</androidx.constraintlayout.widget.ConstraintLayout>